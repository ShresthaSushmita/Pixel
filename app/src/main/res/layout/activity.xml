<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listName"
        android:text="Name"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listEmail"
        android:text="Email"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/listName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listUsername"
        android:text="Username"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/listEmail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listPassword"
        android:text="Password"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/listUserame"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listCPassword"
        android:text="CPassword"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/listPassword"/>



</LinearLayout>